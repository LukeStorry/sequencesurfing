---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card bg-gray-900 bg-gradient-to-r from-transparent via-transparent to-accent-light bg-accent-gradient bg-right  shadow-inner">
	<a href={href} class="w-full text-white rounded-lg bg-gray-900 bg-opacity-80 p-6 transition-colors duration-600 cubic-bezier-022-1-036-1">
		<h2 class="m-0 text-lg transition-colors duration-600 cubic-bezier-022-1-036-1">{title}<span>&rarr;</span></h2>
		<p class="mt-2 mb-0">{body}</p>
	</a>
</li>

